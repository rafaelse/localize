<p id="notice"><%= notice %></p>

<h1>Listing Promotions</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Category</th>
      <th>Banner</th>
      <th>Valid from</th>
      <th>Valid to</th>
      <th>Quantity</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @promotions.each do |promotion| %>
      <tr>
        <td><%= promotion.title %></td>
        <td><%= promotion.description %></td>
        <td><%= promotion.category.name unless promotion.category.nil?  %></td>
        <td><%= image_tag promotion.banner(:thumb) %></td>
        <td><%= promotion.valid_from.strftime("%b/%d/%Y") %></td>
        <td><% if promotion.valid_to %>
        	<%= promotion.valid_to.strftime("%b/%d/%Y")%>
        	<% else %>
        	<%= "Unlimited Time"%>
        	<% end %>
        </td>
        <td><% if promotion.quantity > -1 %>
        	<%= promotion.quantity %>
        	<% else %>
        	<%= "Unlimited Quantity"%>
        	<% end %>
        </td>
        <td><%= number_to_currency(promotion.price) %></td>
        <td><%= link_to 'Show', promotion %></td>
        <td><%= link_to 'Edit', edit_promotion_path(promotion) %></td>
        <td><%= link_to 'Destroy', promotion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

