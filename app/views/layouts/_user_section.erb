<div id="user_section">
  <% if current_advertiser or current_customer %>
      <% if current_advertiser %>
          <span>Welcome, <%= link_to current_advertiser.name, edit_advertiser_registration_path %></span>
          <%= link_to 'Logout', destroy_advertiser_session_path, method: :delete %>
      <% else %>
          <span>Welcome, <%= link_to current_customer.name, edit_customer_registration_path %></span>
          <%= link_to 'Logout', destroy_customer_session_path, method: :delete %>
      <% end %>
  <% else %>
      <span>New advertiser?, <%= link_to 'Sign up here', new_advertiser_registration_path %></span> <br>
      <span>New customer?, <%= link_to 'Sign up here', new_customer_registration_path %></span> <br>
      <span>Already a user? Sign in as an <%= link_to 'Advertiser', new_advertiser_session_path %> or a <%= link_to 'Customer', new_customer_session_path %></span>
  <% end %>
</div>