<div class="smallbox">
  <h2>Mude sua senha</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.label :password, "Nova senha" %><br />
        <% if @minimum_password_length %>
            <em>(MÃ­nimo de <%= @minimum_password_length %> caracteres)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "Confirme a nova senha" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "Mudar minha senha" %>
      </div>
  <% end %>

  <%= render "customers/shared/links" %>
</div>
